<div class="page-wrap">
  <div class="content">
    <%= image_tag 'logo.png', class: 'image-logo' %>

    <div class="panel" id="login">
      <div class="panel-title">
        <h3>Sign up as a new user on <span style="font-size:17px;text-decoration:none;margin-left:1px;color:#d35400;"><%= request.host %></span></h3>
      </div>

      <%= form_tag member_signup_path, id: 'user-signup-form', :method => :post do %>
        <%= hidden_field_tag :organization_name, @organization_name %>
        <%= hidden_field_tag :token, @token %>

        <div class="form-group">
          <%= text_field_tag :user_name, nil, placeholder: 'User Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= email_field_tag :user_email, nil, placeholder: 'User Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :confirm, nil, placeholder: 'Confirm', class: 'form-control' %>
        </div>
        <%= submit_tag 'Sign up' %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('.image-logo').show();
<% end %>
