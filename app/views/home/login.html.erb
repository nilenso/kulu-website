<div class="page-wrap">
  <div class="content">
    <%= image_tag 'logo.png', class: 'image-logo' %>

    <div class="panel" id="login">
      <div class="panel-title">
        <h3>Log into <span style="font-size:17px;text-decoration:none;margin-left:1px;color:#d35400;"><%= request.host %></span></h3>
        <span><a href=<%= forgot_password_path %>>forgot?</a></span>
      </div>

      <%= form_tag 'login', id: 'login-form', :method => :post do %>
        <div class="form-group">
          <%= email_field_tag :user_email, nil, placeholder: 'User Email' %>
        </div>

        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password' %>
        </div>

        <%= submit_tag 'Come on in' %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('.image-logo').show();
<% end %>
