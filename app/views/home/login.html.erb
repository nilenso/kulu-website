<div class="page-wrap">
  <div class="content">
    <%= image_tag 'logo.png', class: 'image-logo' %>

    <div class="panel" id="login">
      <%= form_tag 'login', :method => :post do %>
        <div class="form-group">
          <%= text_field_tag :user_name, nil, placeholder: 'User Name' %>
        </div>

        <div class="form-group">
          <%= email_field_tag :user_email, nil, placeholder: 'User Email' %>
        </div>

        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password' %>
        </div>

        <%= submit_tag 'Come on in' %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('.image-logo').show();
<% end %>
