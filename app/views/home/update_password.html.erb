<div class="page-wrap">
  <div class="content">
    <%= image_tag 'logo.png', class: 'image-logo' %>

    <div class="panel" id="login">
      <div class="panel-title">
        <h3>Enter new password for
          <span style="font-size:17px;text-decoration:none;margin-left:1px;color:#d35400;"><%= @user_email %></span>
          on
          <span style="font-size:17px;text-decoration:none;margin-left:1px;color:#d35400;"><%= request.host %></span>
        </h3>
      </div>

      <%= form_tag update_password_path, id: 'update-password-form', :method => :post do %>
        <%= hidden_field_tag :user_email, @user_email %>
        <%= hidden_field_tag :organization_name, @organization_name %>
        <%= hidden_field_tag :token, @token %>

        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Enter new password', autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :confirm, nil, placeholder: 'Confirm', autofocus: true, class: 'form-control' %>
        </div>
        <%= submit_tag 'Reset password' %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('.image-logo').fadeIn(1200);
<% end %>
