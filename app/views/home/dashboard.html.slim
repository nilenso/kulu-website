= form_for(@invoice, html: {class: 'direct-upload invoice-file-upload-form'}) do |f|
  .field
    = f.hidden_field(:url_prefix)
    = f.hidden_field(:filename, class: 'filename')
    input id='file-upload' type='file' name='upload' data-s3-url="#{@pre_signed_post.url}" data-form-data="#{@pre_signed_post.fields.to_json}"
    label.btn.btn-primary.invoice-file-input-label for='file-upload' Upload Invoice

    .progress.invoice-file-upload-progress
      .progress-bar.progress-bar-warning.progress-bar-striped.active role="progressbar"

p#invoices

javascript:
  new Kulu.FileUploader($('.direct-upload')).setupUpload();

  $(document).on("page:change", function () {
    $.ajax({
      url: "/invoices"
    }).done(function (r) {
      var invoices = _.pluck(r, 'id');
      _.each(invoices, function (i) {
                var html = $('p#invoices');
                html.append(i);
                html.append("<br>");
              }
      );

      return true;
    });
  });
