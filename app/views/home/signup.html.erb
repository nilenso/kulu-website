<div class="page-wrap">
  <div class="content">
    <%= image_tag 'logo.png', class: 'image-logo' %>

    <div class="panel" id="login">
      <div class="panel-title">
        <h3>Create a new team</h3>
        <span><a href=<%= signin_path %>>or login</a></span>
      </div>

      <%= form_tag 'signup', id: 'team-signup-form', :method => :post do %>
        <div class="form-group">
          <%= text_field_tag :organization_name, nil, placeholder: 'Company Name', autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= text_field_tag :user_name, nil, placeholder: 'User Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= email_field_tag :user_email, nil, placeholder: 'User Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :confirm, nil, placeholder: 'Confirm', class: 'form-control' %>
        </div>
        <%= submit_tag 'Sign Up' %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('.image-logo').fadeIn(1200);
<% end %>
