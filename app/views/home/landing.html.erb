<%= form_tag 'signup', :method => :post do %>
  <%= text_field_tag :name, nil, placeholder: 'Team Name' %>
  <%= text_field_tag :user_name, nil, placeholder: 'User Name' %>
  <%= email_field_tag :user_email, nil, placeholder: 'User Email' %>
  <%= password_field_tag :password, nil, placeholder: 'Password' %>
  <%= password_field_tag :confirm, nil, placeholder: 'Confirm' %>
  <br>
  <br>
  <%= submit_tag 'Sign in' %>
<% end %>

