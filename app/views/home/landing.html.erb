<div class="page-wrap">
  <div class="content">
    <%= image_tag 'logo.png', class: 'image-logo' %>

    <div class="panel" id="login">
      <%= form_tag 'signup', :method => :post do %>
        <div class="form-group">
          <%= text_field_tag :name, nil, placeholder: 'Team Name' %>
        </div>
        <div class="form-group">
          <%= text_field_tag :team_domain, nil, placeholder: 'Team Domain' %>
        </div>
        <div class="form-group">
          <%= text_field_tag :user_name, nil, placeholder: 'User Name' %>
        </div>
        <div class="form-group">
          <%= email_field_tag :user_email, nil, placeholder: 'User Email' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :confirm, nil, placeholder: 'Confirm' %>
        </div>

        <%= submit_tag 'Sign Up' %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('.image-logo').fadeIn(1200);
<% end %>
