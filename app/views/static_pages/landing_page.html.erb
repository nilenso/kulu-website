<%= javascript_tag do %>
  var demo_submit = function() {
    var email = $("#customer-email").val();
    var phone = $("#customer-phone").val();

    var myFirebaseRef = new Firebase("https://kulu-signups.firebaseio.com");
    myFirebaseRef.push({"email": email, "phone": phone});
  };
<% end %>

